<div class='container'>
	<div class='row'>
		<div class='col-md-6'>
			<%= simple_form_for @todo do |f| %>
				<% f.error_notification %>
				<div class="form-inputs">
					<%= f.input :name, required: true, autofocus: true %>
				</div>

				<div class="form-actions">
					<%= f.button :submit, "Save" %>
				</div>
			<%end%>
		</div>
	</div>
</div>
